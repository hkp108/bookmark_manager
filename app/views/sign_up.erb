<% if flash[:errors] && !flash[:errors].empty? %>
  Please refer to the following errors below:
  <ul id='errors'>
    <% flash.now[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>



<form action='/sign_up' method='post'>
  <p>
    <label for='name'>
    Name: <input type='text' name='name' value='<%= @user.name %>' required>
    </label>
  </p>
  <p>
    <label for='email'>
      Email: <input type='email' name='email' value='<%= @user.email %>' required>
    </label>
  </p>
  <p>
    <label for='password'>
      Password: <input type='password' name='password' required>
    </label>
  </p>
  <p>
    <label for='password_confirmation'>
      Password: <input type='password' name='password_confirmation' required>
    </label>
  </p>
  <p>
    <button type='submit'>Sign up</button>
  </p>
</form>
